<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme.Common.BaseSyyTheme">

    </style>

    <style name="BaseAppTheme.Common.BaseSyyTheme.MovieDetail">
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowEnterTransition">@transition/syy_transition_movie_detail_enter</item>
        <item name="android:windowReturnTransition">@transition/syy_transition_movie_detail_return</item>
    </style>


    <style name="RatingBar" parent="@style/Theme.AppCompat">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">18dip</item>
        <item name="android:maxHeight">18dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
        <item name="android:indeterminateDrawable">@drawable/common_ratingbar</item>
        <item name="android:progressDrawable">@drawable/common_ratingbar</item>
        <item name="android:numColumns">5</item>
    </style>

</resources>
