<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <lumenghz.com.pullrefresh.PullToRefreshView
        android:id="@+id/srl_syy_movie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_syy_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:orientation="vertical"
            />

    </lumenghz.com.pullrefresh.PullToRefreshView>

    <com.nightonke.boommenu.BoomMenuButton
        android:id="@+id/menu_syy_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:bmb_buttonEnum="ham"
        app:bmb_buttonPlaceEnum="buttonPlace_ham_2"
        app:bmb_piecePlaceEnum="piecePlace_ham_2"
        app:bmb_highlightedColor="@color/dark_10_percent"
        app:bmb_normalColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/srl_syy_movie"
        app:layout_constraintEnd_toEndOf="@id/srl_syy_movie"/>

</android.support.constraint.ConstraintLayout>


